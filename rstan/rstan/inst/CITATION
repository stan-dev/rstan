citHeader("To cite RStan in publications use:")

citEntry(entry = "Misc", 
         title = "{RStan}: the {R} interface to {Stan}",
         author = person(given = "Stan Development Team"),
         note = paste("R package version", packageVersion('rstan')),
         year = substr(packageDescription("rstan")$Date, start = 1, stop = 4),
         url = "http://mc-stan.org/",
         textVersion =
           paste0("Stan Development Team (",
                  substr(packageDescription("rstan")$Date, start = 1, stop = 4),
                  "). ",
                  title = "RStan: the R interface to Stan. R package version ",
                  packageVersion('rstan'), ". ",
                  "http://mc-stan.org/.")
)
